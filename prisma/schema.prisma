generator client {
  provider = "prisma-client-js"
  output = "./prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  avatarUrl     String?
  role         String          @default("USER")
  accounts      Account[]
  sessions      Session[]
  userImages    UserImage[]
  likes         Like[]
 chats         Chat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserImage {
  id           String   @id @default(cuid())
  userId       String
  imageUrl     String
  cloudinaryId String   @unique
  fileName     String
  width        Int
  height       Int
  userAvatar   Boolean
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([imageUrl])
  @@index([cloudinaryId])
  @@index([fileName])
}
 
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
 
 model MdxPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  date      DateTime @default(now())
  author    String
  description String
  imageUrl String?
  categories String[]
  wordCount Int
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  likes Like[]

 }

model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mdxPost  MdxPost  @relation(fields: [postId], references: [id], onDelete: Cascade)
  @@index([userId])
  @@index([postId])
  @@unique([userId, postId])

  @@map("likes")
}

model Cv {
  id           String        @id @default(cuid())
  name         String        @unique
  phone        String
  email        String
  address      String
  blurb        String
  experience   Experience[]
  publications Publication[]
  education    Education[]
  skills       Skill[]
  conferences   conferences[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Experience {
  id         String    @id @default(cuid())
  company    String
  position   String
  location   String?
  startDate  DateTime
  endDate    DateTime?
  isCurrent  Boolean   @default(false)
  updatedAt  DateTime  @updatedAt
  cvRelation Cv?       @relation(fields: [cvId], references: [id])
  cvId       String?
  duties     Duty[]
}

model Duty {
  id           String      @id @default(cuid())
  experienceId String?
  title        String
  order        Int // Used for sorting
  Experience   Experience? @relation(fields: [experienceId], references: [id])
  Education    Education?  @relation(fields: [educationId], references: [id])
  educationId  String?
}

model Education {
  id          String    @id @default(cuid())
  school      String
  degree      String
  startDate   DateTime
  endDate     DateTime
  description String
  Cv          Cv?       @relation(fields: [cvId], references: [id])
  cvId        String?
  duties      Duty[]
}

model Publication {
  id              String   @id @default(cuid())
  title           String
  journal         String
  journalInfo     String
  publicationDate DateTime
  doi             String
  pmid            String
  authors         String[]
  Cv              Cv?      @relation(fields: [cvId], references: [id])
  cvId            String?
}

model conferences {
  id              String   @id @default(cuid())
  title           String
  conference      String
  authors         String[]
  Cv              Cv?      @relation(fields: [cvId], references: [id])
  cvId            String?
}

model Skill {
  id       String  @id @default(cuid())
  title    String
  category String
  Cv       Cv?     @relation(fields: [cvId], references: [id])
  cvId     String?
}


model aiStatement {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  statement String
}


model Visitor {
  id String @id @default(cuid())
  cookieId String @unique
  firstVisit DateTime @default(now())
  lastVisit DateTime @updatedAt
}

model Chat {
  id String @id @default(cuid())
  userId String
  title String
  createdAt DateTime @default(now())
  messages Message[]
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
model Message {
  id String @id @default(cuid())
  chatId String
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  role String  // "user" or "assistant"
  content String
  createdAt DateTime @default(now())
}


model Kanji {
  id String @id @default(cuid())
  kanji                  String
  kana                   String
  meaning                String
  jlpt                   Int
  strokeNumber           Int           @map("stroke_number")
  sentenceJp             String        @map("sentence_jp")
  sentenceEn             String        @map("sentence_en")
  queryKanji             Boolean       @map("query_kanji")
  queryKanjiCharacter    String?       @map("query_kanji_character")
  parentId               String?          
  parent                 Kanji?   @relation("KanjiRelations", fields: [parentId], references: [id])
  related                Kanji[]  @relation("KanjiRelations")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


